/* Larger viewports */
@media only screen and (min-width: 32.5em) {
	header img {
		width: 100%;
	}

	header,
	nav,
	main,
	footer {
	max-width: 800px;
	margin: 0 auto;
}	

	.headings h1 {
		font-size: 2rem;
		margin: 0;
	}

	.m, h2 {
		letter-spacing: 1.2pt;
		font-size: 1rem;
	}

    .navigation {
		display: flex;
	}
	.navigation li {
		display: block; /* change state in small view */
		flex: 1 1 auto;
	}
	.navigation a {
		text-align: center;
	}
	.navigation li:first-child {
		display: none;
	}

	footer p {
		font-size: 0.8rem;
	}

	.info{
		grid-column: 5;
		padding-left: 3em;
		grid-row: 1;
		
	}

	#last_paragraph{
		grid-column: 3/5;
		grid-row: 2;
		text-align: center;
	}
}