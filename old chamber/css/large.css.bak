/* Larger viewports */
@media only screen and (min-width: 60em) {
	header img {
		width: 100%;
	}

	.headings h1 {
		font-size: 2.5rem;
		margin: 0;
	}

	header,
nav,
main,
footer {
	max-width: 900px;
	margin: 0 auto;
}

	.m, h2 {
		letter-spacing: 1.5pt;
		font-size: 1.2rem;
	}

    .social svg {
        width: 40px;
        height: auto;
    }

    .navigation{
        font-size: 1.3rem;
    }

	footer p {
		font-size: 1rem;
	}

	.info{
		padding-left: 5em;

		
	}

	#last_paragraph{
		grid-column: 1/6;
		grid-row: 2;
		text-align: center;
	}
}